@model MVC_Bakkal.Models.Kategori

@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Kategori</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <!-- Form yapısından faydalanılarak güncellemek istenilen yeni veriler alınmıştır ve güncelleme fonkiyounan gönderilmiştir.
           Verinin önceki değeri System.Data.DataRow yapısı kullanılarak güncelenilecek verilerin value yardımıyla default değerleri atanmıştır.-->

    @foreach (System.Data.DataRow DR in ViewBag.emprecord.Rows)
    {
        <form action="/Kategori/Update" method="post">

            <input type="text" name="k_adi" placeholder="Kategori adı girin.." style="margin-top:50px" value="@DR["k_adi"]" />



        </form>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>
    }
</div>
}

<div>
    @Html.ActionLink("Kategori", "List")
</div>
