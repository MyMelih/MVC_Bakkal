@model MVC_Bakkal.Models.Rol

@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Rol</h4>
    <hr />
    <!-- Form yapısından faydalanılarak güncellemek istenilen yeni veriler alınmıştır ve güncelleme fonkiyounan gönderilmiştir.
           Verinin önceki değeri System.Data.DataRow yapısı kullanılarak güncelenilecek verilerin value yardımıyla default değerleri atanmıştır.-->
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @foreach (System.Data.DataRow DR in ViewBag.emprecord.Rows)
    {
        <form action="~/Rol/Update" method="post">
            <input type="text" name="r_adi" placeholder="Rol adı girin..." style="margin-top=50px" value="@DR["r_adi"]" />
        </form>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>
    }
</div>
}

<div>
    @Html.ActionLink("Rol", "List")
</div>
