@model MVC_Bakkal.Models.Stok

@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <!-- Form yapısından faydalanılarak güncellemek istenilen yeni veriler alınmıştır ve güncelleme fonkiyounan gönderilmiştir.
           Verinin önceki değeri System.Data.DataRow yapısı kullanılarak güncelenilecek verilerin value yardımıyla default değerleri atanmıştır.-->
    <div class="form-horizontal">
        <h4>Stok</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        @foreach (System.Data.DataRow DR in ViewBag.emprecord.Rows)
        {
            <form action="/Stok/Update" method="post">

                <input type="number" name="s_adedi" placeholder="Adet sayısını Girin" style="margin-top:50px" value="@DR["s_adedi"]" />

                <input type="date" name="s_giris_tarihi" style="margin-top:50px" value="@DR["s_giris_tarihi"]" />

                <input type="date" name="s_bitis_tarihi" style="margin-top:50px" value="@DR["s_bitis_tarihi"]" />



            </form>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Update" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
}

<div>
    @Html.ActionLink("Stokt", "List")
</div>
